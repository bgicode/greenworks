                <div class="swiper my-5 w-100" id="swiperSliderHomeAdvantages">
                    <div class="swiper-wrapper">
                        {% for i  in 0..8 %}
                            <div class="swiper-slide h-auto">
                                <img class="w-100 h-100 rounded" src="./img/home/slider_advantages_{{ i }}.png" alt="">
                            </div>
                        {% endfor %}
                    </div>
                    <div class="swiper-pagination position-relative mt-9 d-none d-md-block"></div>
                </div>


                <a href="#" class="text-decoration-none text-center d-block my-6 link-light bg-primary fw-bold p-3">
                    НАШЕЛ ДЕШЕВЛЕ ДАЖЕ В ТЕЧЕНИЕ 2 НЕДЕЛЬ ПОСЛЕ ПОКУПКИ - ВЕРНЕМ РАЗНИЦУ
                    <span class="fw-normal">(Нажми и узнай подробности)</span>
                </a>

                <div class="row row-gap-10 my-15 ">
                    {% set series = [
                        {
                            'voltage': '24V',
                            'name': 'Серия 24 Вольт'
                        },
                        {
                            'voltage': '40V',
                            'name': 'Серия 40 Вольт'
                        },
                        {
                            'voltage': '60V',
                            'name': 'Серия 60 Вольт'
                        },
                        {
                            'voltage': '82V',
                            'name': 'Серия 82 Вольт Commercial'
                        },
                        {
                            'voltage': '80V',
                            'name': 'Серия 80 Вольт'
                        },
                        {
                            'voltage': '220V',
                            'name': 'Серия 230 Вольт'
                        }
                    ] %}
                    {% for key, val in series %}
                        <div class="col-4 ">
                            <a href="/catalog.html"
                               class="gap-4 pe-xl-10 fw-semibold d-flex flex-column flex-md-row text-uppercase  text-decoration-none align-items-center link-dark">
                                <div class="series-icon">
                                    <img src="/img/catalog/series/series_{{ key }}.png" alt="">
                                </div>
                                <div class="fs-3 fs-sm-7 text-md-start text-center">
                                    {{ val.name }}
                                </div>
                            </a>
                        </div>
                    {% endfor %}

                </div>

                <div class="fs-11 fs-sm-19 my-5 text-uppercase fw-semibold">
                    Присмотритесь к этим предложениям
                </div>
                <div role="tabpanel">
                        <div class="d-flex my-5  border-0 g-3 nav nav-tabs row">
                            {% set sections = [
                                { 'title': 'Хиты продаж', 'active': true },
                                { 'title': 'Скидки', 'active': false },
                                { 'title': 'Новинки', 'active': false },
                                { 'title': 'Рекомендации', 'active': false }
                            ] %}
                            {% for key, section in sections %}
                                    <div class="col-lg-3 col-md-6">
                                        <button class="w-100 btn rounded-5 py-3 {{ section.active ? ' btn-dark' : ' btn-light' }}"
                                                data-bs-toggle="tab" href="#list-home_{{ key }}" role="tab"
                                                aria-controls="list-home_{{ key }}"
                                                aria-selected="{{ section.active ? 'true' : 'false' }}">
                                            {{ section.title }}
                                        </button>
                                    </div>

                            {% endfor %}
                        </div>

                    <div class="tab-content" id="nav-tabContent">
                        {% for i in 0..3 %}
                            <div class="tab-pane fade {{ i == 0 ? 'show active' : '' }}" id="list-home_{{ i }}"
                                 role="tabpanel" aria-labelledby="list-home_{{ i }}-tab">
                                <div class="row d-none d-md-flex">
                                    {% for i in 1..8 %}
                                        <div class="col-12 p-3 col-sm-6 col-md-4 col-lg-3">
                                            {% include '/inc/catalog/catalog_item.twig' %}
                                        </div>
                                    {% endfor %}
                                </div>

                                <div class="swiper d-block d-md-none" id="swiperCatalogList">
                                    <div class="swiper-wrapper">
                                        {% for i in 0..6 %}
                                            <div class="swiper-slide">
                                                {% include '/inc/catalog/catalog_item.twig' %}
                                            </div>
                                        {% endfor %}
                                    </div>
                                    <div class="swiper-pagination position-relative mt-9 d-flex justify-content-between"></div>
                                </div>


                            </div>
                        {% endfor %}
                        <div class="mt-7 text-center">
                            <a href="../catalog.html" class="read-all-link btn btn-outline-primary border-black text-black px-7 py-4">
                                Показать все >
                            </a>
                        </div>
                    </div>
                </div>

                {% include '/inc/main/advantages.twig' %}

                {% include '/inc/catalog/catalog_footer.twig' %}


            </div>
        </div>

    </div>

{% endblock %}
