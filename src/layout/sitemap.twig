{% extends "templates/base.twig" %}

{% set title = "Sitemap html" %}

{% block page %}
    <div class="py-lg-5 py-4"></div>
    <div class="container my-5">
        <div class="bg-light py-5 p-4">
            <h1 class="h3 mb-4">
                {{ title }}
            </h1>
            {% set sitemapList = {
                "Главная" : "/index.html",
                "Каталог" : "/catalog.html",
                "Каталог секция" : "/catalog-section.html",
                "Корзина": "/basket.html",
                "Блог" : "/blog.html",
                "Блог детальная" : "/blog-detail.html",
                "Политика в отношении обработки персональных данных" : '/policy.html',
                "Контакты" : '/contacts.html',
                "Кабинет авторизация" : '/user-login.html',
                "Кабинет регистрация" : '/user-registration.html',
                "Кабинет восстановление пароля" : '/user-reset-password.html',

            } %}
            <ol>
                {% for key, val in sitemapList %}
                    <li>
                        <a class="py-1 d-block" href="{{ val }}">
                            {{ key }}
                        </a>
                    </li>
                {% endfor %}

            </ol>
        </div>
    </div>


{% endblock %}
