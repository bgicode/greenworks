    <div class="container menu_mobile bg-white d-block d-lg-none pb-4">
        <div class="row py-3 px-4">
            <div class="col-12 d-flex justify-content-between align-items-center position-relative">
                <a href="/index.html" class="second_menu__item">
                    <img class="" src="./img/main/main_logo.png" alt="">
                </a>
                <div class="d-flex justify-content-end">
                    <div class="lh-lg d-flex justify-content-between text-grey align-items-center me-20">
                        <img class="me-1" src="/img/main/geo_pin_grey.svg">
                        <span class="geo_mobile">Владимир</span>
                    </div>
                    <div class="position-absolute menu_mob-wrap bg-white top-0 end-0 z-3">
